    <style>
    body {
    font-family: 'Arial', sans-serif;
    margin: 0;
    padding: 0;
}

.navbar {
    border-radius: 0;
}

.navbar-brand {
    font-size: 1.5rem;
    font-weight: bold;
}

.navbar-toggler-icon {
    border-color: #fff;
}

.navbar-nav a {
    color: #fff;
    margin: 0 15px;
    text-decoration: none;
    display: flex;
    align-items: center;
}

.nav-link i {
    margin-right: 5px;
}

.navbar-nav a:hover {
    background: #f43c80;
}


.navbar-nav .active {
    background-color: #007bff;
    border-radius: 5px;
}


